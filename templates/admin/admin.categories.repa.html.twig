{% extends "baseadmin.html.twig" %}

{% block body %}

    <form class="form-inline mt-1" method="POST" action="{{ path('admin.categorieRepa.ajout') }}">
        <div class="form-group mr-1 mb-2">
            <h5 class="card-title mb-3">Ajouter une categorie de repa</h5>
            <input type="text" class="sm" name="nom">
            <button type="submit" class="btn btn-primary mb-2 btn-sm">Ajouter</button>
        </div>
    </form>   
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for categorieRepa in categoriesRepa %}
                <tr>
                    <td>
                        {{ categorieRepa.nom }}
                    </td>
                    <td>
                        <a href="{{ path('admin.categorieRepa.suppr', {id:categorieRepa.id}) }}" 
                           class="btn btn-danger" 
                           onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ categorieRepa.nom }} ?')">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
