{% extends "baseadmin.html.twig" %}

{% block body %}
                    
    <p class="text-end">
        <a href="{{ path('admin.recette.ajout') }}" class="btn btn-primary">
            Ajouter une nouvelle recette
        </a>
    </p>
    <h5 class="card-title mb-3">Liste des recettes :</h5></br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    Nom
                    <a href="{{ path('admin.recettes.sort', {champ:'nom', ordre:'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('admin.recettes.sort', {champ:'nom', ordre:'DESC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                </th>
                <th class="text-left align-top" scope="col">
                    Note
                </th>
                <th class="text-left align-top" scope="col">
                    Recette
                    <a href="{{ path('admin.recettes.sort', {champ:'datecreation', ordre:'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('admin.recettes.sort', {champ:'datecreation', ordre:'DESC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for repa in repas %}
                <tr>
                    <td>
                        <h5 class="text-primary">
                            {{ repa.nom }}
                        </h5>
                    </td>
                    <td>
                        {{ repa.note }}
                    </td>
                    <td>
                        {{ repa.datecreationstring }}
                    </td>
                    <td>
                        <a href="{{ path('admin.recette.edit', {'id': repa.id}) }}" class="btn btn-secondary">Editer</a>
                        <a href="{{ path('admin.recette.suppr', {'id': repa.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer la recette {{repa.nom}} ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
            
{% endblock %}