{% extends "basefront.html.twig" %}

{% block body %}
    <div class="row mt-3">
        <div class="col">
            <h1 class="text-primary mt-5">{{ repa.nom }}</h1>
            <h5> Crée le {{ repa.datecreationstring }}</h5>
            <h5> Note : {{ repa.note }}/20</h5>
            <h5>Temps de préparation : {{ repa.duree }} min</h5>
            <h5>Catégorie :
                {% for category in repa.categories %}
                    {{ category.nom }}
                {% endfor %}
            </h5></br>
            <h5>Instruction :</h5>
            <p>
                {{ repa.instruction|nl2br }}
            </p>
        </div>
    </div>
    
{% endblock %}